{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "allowJs": true,
    "jsx": "react-jsx",

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,

    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"],
  "references": []
}
